@page
@model Tesla.Pages.LogindModel
@{
    ViewData["Title"] = "Log in";
}
<h1><img src="~/images/teslalogo.png" /></h1>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="@Model.Name" class="control-label">Username</label><br>
                <input asp-for="@Model.Name" class="form-control" /><br>
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Password" class="control-label">Password</label><br>
                <input type="password" asp-for="@Model.Password" class="form-control" /><br>
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sign in" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-page="CreateLogInd">Create account</a>
</div>